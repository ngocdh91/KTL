<resources>



    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"></style>


    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:background">@drawable/item_divider_simple</item>
    </style>

    <style name="TittleItem">
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">@dimen/content_padding_normal</item>
        <item name="android:paddingEnd">@dimen/content_padding_normal</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">@dimen/text_medium_2</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="TittleItem.ContentInfoProduct">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>>

    </style>

    <style name="TittleItem.TitleInfoProduct">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="LayoutCustomerItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/item_normal_bg</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">@dimen/content_padding_normal</item>
        <item name="android:paddingEnd">@dimen/content_padding_normal</item>
        <item name="android:paddingLeft">@dimen/content_padding_normal</item>
        <item name="android:paddingRight">@dimen/content_padding_normal</item>
        <item name="android:paddingStart">@dimen/content_padding_normal</item>
        <item name="android:paddingTop">@dimen/content_padding_normal</item>
    </style>

    <style name="LayoutCustomerItem.ItemProduct">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingEnd">0dp</item>
    </style>

    <style name="LayoutCustomerItem.ItemProduct.ItemWithImage">
        <item name="android:paddingBottom">@dimen/product_detail_padding</item>
        <item name="android:paddingTop">@dimen/product_detail_padding</item>
    </style>

</resources>
